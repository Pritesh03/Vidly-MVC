@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "MoviesList";
}

<h2>Movies</h2>

@Html.ActionLink("New Movie", "New", "Movies", new { @class = "btn btn-lg btn-primary mb-3 px-4" })

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Movie
            </th>
            <th>
                Genre
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var movie in Model)
        { 
        <tr>
            <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { Id = movie.Id }, null)</td>
            <td>@movie.Genre.Name</td>
        </tr>
        }
    </tbody>
</table>