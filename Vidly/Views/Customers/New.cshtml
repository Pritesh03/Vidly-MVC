@model Vidly.ViewModels.NewCustomerViewModel

@{
    ViewBag.Title = "New";
}

<h2>New Customer</h2>


@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Name)
        @Html.TextBoxFor(c => c.Customer.Name, new { @class = "form-control w-50", placeholder = "Enter the customer's name..." })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.DateOfBirth)
        @Html.TextBoxFor(c => c.Customer.DateOfBirth, new { @class = "form-control w-50", type = "date", placeholder = "Enter the customer's date of birth..." })
    </div>

    <div class="form-check mt-4">
        @Html.CheckBoxFor(c => c.Customer.IsSubscribedToNewsLetter, new { @class = "form-check-input", style = "width:18px; height:18px;" })
        @Html.LabelFor(c => c.Customer.IsSubscribedToNewsLetter, new { @class = "form-check-label", style = "margin-left : 10px;" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.MembershipType)
        @*@Html.DropDownListFor(c => c.Customer.MembershipTypeId, new SelectList(Model.MembershipType, Model.MembershipType.))*@
    </div>
}